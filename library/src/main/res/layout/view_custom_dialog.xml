<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_passenger_edittext"
    >

  <android.support.v7.widget.AppCompatImageView
      android:id="@+id/image_dialog"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_centerHorizontal="true"
      android:padding="8dp"
      android:src="@mipmap/ic_dialog_info"
      />

  <View
      android:id="@+id/view_line"
      android:layout_width="match_parent"
      android:layout_height="0.5dip"
      android:layout_below="@+id/image_dialog"
      android:background="@color/widgetBackground"
      />

  <android.support.v7.widget.AppCompatTextView
      android:id="@+id/view_dialog_av_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/view_line"
      android:gravity="center"
      android:paddingBottom="16dp"
      android:paddingLeft="64dp"
      android:paddingRight="64dp"
      android:paddingTop="16dp"
      android:text="您的余额不足,请前往充值"
      android:textSize="16sp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/view_dialog_av_text"
      android:layout_margin="16dp"
      android:orientation="horizontal"
      >

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/view_dialog_sure"
        android:layout_width="0dp"
        android:gravity="center"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selector_dialog_btn_red"
        android:text="立即充值"
        android:textColor="@android:color/white"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/view_dialog_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/selector_dialog_btn_white"
        android:text="暂不充值"
        android:textColor="@android:color/white"
        />

  </LinearLayout>


</RelativeLayout>